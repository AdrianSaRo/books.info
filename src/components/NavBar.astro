---
import SearchBar from "./SearchBar.astro"

---

<nav class="sticky flex flex-col items-center top-0 left-0  text-center w-full p-4 text-6xl">
    <span class='text-slate-200 font-bold uppercase italic'>Books</span>
    <span class='text-lg text-yellow-400 font-bold uppercase italic'>.info</span>
    <SearchBar />
</nav>

<style>
    nav {
        animation: enhance-header linear both;
        animation-timeline: scroll(root);
        animation-range: 0 300px;
        z-index: 1;
    }

    @keyframes enhance-header {
        to {
            background:  rgba(255, 255, 255, 0.756);
            backdrop-filter: blur(5px);
            font-size: 20px;
            flex-direction: row;
            padding: 0.5rem;
        }
    }

</style>